<%= job_type(@job) %>
<h1><%= @job.name %></h1>
<div class="job_show_canvas">
  <div class="large-9 columns">
    <h4>工作描述：</h4>
    <p><%= @job.description.html_safe %></p>
    <h4>工作需求：</h4>
    <p><%= @job.requirement.html_safe %></p>
    <h4>月薪範圍：</h4>
    <% if @job.salary_from.present? && @job.salary_to.present? %>
    <p><%= number_to_currency(@job.salary_from) %> ~ <%= number_to_currency(@job.salary_to) %></p>
    <% else %>
    <p>面議</p>
    <% end %>
    <h4>年薪可達：</h4>
    <% if @job.annual_salary.present? %>
    <p><%= number_to_currency(@job.annual_salary) %></p>
    <% else %>
    <p>面議</p>
    <% end %>
    <h4>相關連結：</h4>
    <a href="<%= @job.link %>"><%= @job.link %></a>
    <h4>應徵方式：</h4>
    <%= @job.how_to_apply %>
  </div>
  <div class="large-3 columns">
    <h4>公司名稱:<%= link_to(@job.company_name, company_path(@job.company_id))  %>&nbsp;<i class="fa fa-external-link"></i></h4>
    <h5>更新時間:<%= @job.updated_at.strftime("%F") %></h5>
  </div>  
</div>
